<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <EditText
        android:id="@+id/nameEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#d77fa1"
        android:hint="Full Name"
        android:textColorHint="#e6b2c6"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#d77fa1"
        android:hint="Email"
        android:textColorHint="#e6b2c6"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEdt" />

    <EditText
        android:id="@+id/passwordEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#d77fa1"
        android:hint="Password"
        android:textColorHint="#e6b2c6"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEdt" />

    <EditText
        android:id="@+id/mobileUserEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#d77fa1"
        android:hint="Mobile Number"
        android:textColorHint="#e6b2c6"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEdt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Emergency Contacts:"
        android:textColor="#d77fa1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobileUserEdt" />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <TextView
                android:id="@+id/personNameTV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#d77fa1"
                android:text="Name" />

            <TextView
                android:id="@+id/contactTV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#d77fa1"
                android:text="Contact" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <EditText
                android:id="@+id/person1NameEdt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Person1"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/contact1Edt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <EditText
                android:id="@+id/person2NameEdt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Person2"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/contact2Edt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <EditText
                android:id="@+id/person3NameEdt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Person3"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/contact3Edt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

            <EditText
                android:id="@+id/person4NameEdt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Person4"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/contact4Edt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

            <EditText
                android:id="@+id/person5NameEdt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Person5"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/contact5Edt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:backgroundTint="#d77fa1"
                android:textColorHint="#e6b2c6"
                android:textSize="17sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Sign Up"
            android:onClick="storeInDB"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/background_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout11" />

</androidx.constraintlayout.widget.ConstraintLayout>